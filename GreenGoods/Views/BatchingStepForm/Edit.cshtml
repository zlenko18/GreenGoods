@model GreenBowl.Models.ViewModels.BatchingStepFormVM

<h2 class="mb-3">Batching Step</h2>

<partial name="_FormAlerts" />

<form asp-action="Edit" method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Lot" />

    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Production date</label>
                <input asp-for="ProductionDate" class="form-control" type="date" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Production supervisor</label>
                <input asp-for="ProductionSupervisor" class="form-control" />
            </div>
        </div>

        <partial name="_BatchingStepBatchColumn" for="A" view-data='new ViewDataDictionary(ViewData) { ["IngredientLotOptions"] = Model.IngredientLotOptions }' />
        <partial name="_BatchingStepBatchColumn" for="B" view-data='new ViewDataDictionary(ViewData) { ["IngredientLotOptions"] = Model.IngredientLotOptions }' />
        <partial name="_BatchingStepBatchColumn" for="C" view-data='new ViewDataDictionary(ViewData) { ["IngredientLotOptions"] = Model.IngredientLotOptions }' />
        <partial name="_BatchingStepBatchColumn" for="D" view-data='new ViewDataDictionary(ViewData) { ["IngredientLotOptions"] = Model.IngredientLotOptions }' />
    </div>

    <div class="card-footer d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="ProductInventory" asp-action="Index" class="btn btn-secondary ms-auto">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
