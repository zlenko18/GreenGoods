@model GreenBowl.Models.ViewModels.XRayFormVM

<h2 class="mb-3">X-Ray Monitoring</h2>

<partial name="_FormAlerts" />

<form asp-action="Edit" method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Lot" />

    <div class="card-body">
        <partial name="_XRayBatchColumn" for="A" />
        <partial name="_XRayBatchColumn" for="B" />
        <partial name="_XRayBatchColumn" for="C" />
        <partial name="_XRayBatchColumn" for="D" />
    </div>

    <div class="card-footer d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="ProductInventory" asp-action="Index" class="btn btn-secondary ms-auto">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
