@model GreenBowl.Models.ViewModels.EquipmentBatchVM

<div class="card mb-3">
    <div class="card-header">Batch @Model.Batch</div>

    <div class="card-body">
        <input type="hidden" asp-for="Batch" />

        <div class="mb-2">
            <label class="form-label">Equipments</label>
            <div class="border rounded p-2">
                @foreach (var e in Enum.GetValues<EquipmentType>())
                {
                    var isChecked = Model.Equipments.Contains(e);

                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="@($"{ViewData.TemplateInfo.HtmlFieldPrefix}.Equipments")"
                               value="@e"
                               @(isChecked ? "checked" : null) />
                        <label class="form-check-label">@e</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-check mb-2">
            <input asp-for="CIP_COPBeforeStarting" class="form-check-input" />
            <label class="form-check-label">CIP / COP before starting</label>
        </div>

        <div class="form-check mb-2">
            <input asp-for="FunctionCondition" class="form-check-input" />
            <label class="form-check-label">Function condition</label>
        </div>

        <div class="form-check mb-2">
            <input asp-for="HygienicCondition" class="form-check-input" />
            <label class="form-check-label">Hygienic condition</label>
        </div>

        <div class="mb-2">
            <label class="form-label">Comments</label>
            <input asp-for="Comments" class="form-control" />
        </div>

        <div class="mb-2">
            <label class="form-label">Initial of Controller</label>
            <input asp-for="InitialOfController" class="form-control" />
        </div>
    </div>
</div>
