@model GreenBowl.Models.ViewModels.BulgingFormVM

<h2>Bulging Test on Pouch — Lot @Model.Lot (@Model.ProductName)</h2>

<form asp-action="Edit" method="post" class="box">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <partial name="_FormAlerts" />

    <input type="hidden" asp-for="Lot" />

    <div class="row g-3 mb-3">
        <div class="col-md-2">
            <label class="form-label">Lot</label>
            <input class="form-control" value="@Model.Lot" readonly />
        </div>

        <div class="col-md-3">
            <label asp-for="ProductName" class="form-label"></label>
            <select asp-for="ProductName" class="form-select"
                    asp-items="Html.GetEnumSelectList<GreenBowl.Models.ProductName>()">
            </select>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="NumberOfPouch" class="form-label"></label>
            <input asp-for="NumberOfPouch" type="number" class="form-control" />
            <span asp-validation-for="NumberOfPouch" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="ProductionDate" class="form-label"></label>
            <input asp-for="ProductionDate" type="date" class="form-control" />
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="ExpiryDate" class="form-label"></label>
            <input asp-for="ExpiryDate" type="date" class="form-control" />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>
    </div>

    <hr class="my-3" />

    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <label asp-for="TimeOfIncubation" class="form-label"></label>
            <input asp-for="TimeOfIncubation" type="number" class="form-control" />
            <div class="form-text">Days</div>
            <span asp-validation-for="TimeOfIncubation" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="TemperatureOfIncubation" class="form-label"></label>
            <input asp-for="TemperatureOfIncubation" type="number" class="form-control" />
            <div class="form-text">°C</div>
            <span asp-validation-for="TemperatureOfIncubation" class="text-danger"></span>
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <div class="form-check">
                <input asp-for="Results" class="form-check-input" />
                <label asp-for="Results" class="form-check-label"></label>
            </div>
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <div class="form-check">
                <input asp-for="Taste" class="form-check-input" />
                <label asp-for="Taste" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Comments" class="form-label"></label>
        <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

    <hr class="my-3" />

    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <label asp-for="DateOfRelease" class="form-label"></label>
            <input asp-for="DateOfRelease" type="date" class="form-control" />
            <span asp-validation-for="DateOfRelease" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="QAInitial" class="form-label"></label>
            <input asp-for="QAInitial" class="form-control" />
            <span asp-validation-for="QAInitial" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="TPC" class="form-label"></label>
            <input asp-for="TPC" type="number" class="form-control" />
            <span asp-validation-for="TPC" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="YM" class="form-label"></label>
            <input asp-for="YM" type="number" class="form-control" />
            <span asp-validation-for="YM" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="ProductInventory" asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
