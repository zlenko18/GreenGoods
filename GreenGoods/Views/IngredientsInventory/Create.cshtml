@model GreenBowl.Models.ViewModels.IngredientsInventoryInboundFormVM
<h2>Create Ingredient Lot</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label>Ingredient</label>
        <select asp-for="IngredientName" asp-items="Html.GetEnumSelectList<IngredientName>()"></select>
    </div>

    <div>
        <label>Quantity</label>
        <input asp-for="Quantity" />
    </div>

    <div>
        <label>Supplier Name</label>
        <input asp-for="SupplierName" />
    </div>

    <div>
        <label>Truck Plate</label>
        <input asp-for="TruckPlate" />
    </div>

    <div>
        <div class="form-check">
            <input asp-for="QualityCheck" class="form-check-input" />
            <label asp-for="QualityCheck" class="form-check-label">Quality Check</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</form>
